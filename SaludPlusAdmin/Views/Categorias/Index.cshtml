@model IEnumerable<SaludPlusAdmin.Models.Categorias>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4 text-primary">Categorías</h2>

<p>
    @Html.ActionLink("Crear Nueva Categoría", "Create", null, new { @class = "btn btn-success mb-3" })
</p>

<table class="table table-striped table-hover table-bordered">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.CategoriaID)</th>
            <th>@Html.DisplayNameFor(model => model.Nombre)</th>
            <th>@Html.DisplayNameFor(model => model.Descripcion)</th>
            <th>@Html.DisplayNameFor(model => model.Activo)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.CategoriaID)</td>
                <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                <td>
                    @if (item.Activo == true)
                    {
                        <span class="badge bg-success">Activo</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Inactivo</span>
                    }
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.CategoriaID }, new { @class = "btn btn-sm btn-primary me-1" })
                    @Html.ActionLink("Detalles", "Details", new { id = item.CategoriaID }, new { @class = "btn btn-sm btn-info text-white me-1" })
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.CategoriaID }, new { @class = "btn btn-sm btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>
